{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@classes/*": ["src/classes/*"],
      "@params/*": ["src/params/*"],
      "@responses/*": ["src/responses/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src"]
}
